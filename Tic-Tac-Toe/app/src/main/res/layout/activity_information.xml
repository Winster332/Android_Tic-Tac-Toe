<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.stas.tic_tac_toe.Information"
             android:background="@color/material_blue_grey_950">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Колличество нейронов: "
            android:textSize="20dp"
            android:id="@+id/count_neurons"
            android:textColor="#AAAAAA"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Колличество весов: "
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/count_D"
            android:textColor="#AAAAAA"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Убить мозг"
            android:layout_gravity="center_horizontal"
            android:tag="dead_barin"
            android:onClick="listnerButtonClickInformation"
            android:background="@drawable/lmdbutton"
            android:textColor="#2266FF"
            android:textAlignment="center"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="О нас:"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#AA00CC99"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Данная программа написана коммандой LMD. Если у вас есть интересные идеи или хотите предложить помощь, нажмите на кнопку ниже."
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#AAAAAA"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Перейти в группу разработчика"
            android:layout_gravity="center_horizontal"
            android:tag="Go_LMD"
            android:onClick="listnerButtonClickInformation"
            android:background="@drawable/lmdbutton"
            android:layout_marginBottom="5dp"
            android:textColor="#2266FF"
            android:padding="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вернуться в меню"
            android:layout_gravity="center_horizontal"
            android:tag="back"
            android:onClick="listnerButtonClickInformation"
            android:background="@drawable/lmdbutton"
            android:textColor="#2266FF"
            android:padding="10dp"/>
    </LinearLayout>
</TableLayout>
